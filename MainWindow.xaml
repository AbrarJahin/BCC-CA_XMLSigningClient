<Window x:Class="XMLSigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLSigner"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        Closing="CloseWindowButton_Click"
        StateChanged="FormStateChanged"
        Title="XML Signing" Height="70" Width="400">
    <Grid Height="35">
        <TextBox Name="SelectedFileName" HorizontalAlignment="Left" Margin="80,10,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="237"/>
        <Button Content="Sign" HorizontalAlignment="Left" Margin="322,10,0,0" VerticalAlignment="Top" Width="68" Click="SignButtonClicked"/>
        <Button Content="Choose File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ChooseFileButton_Click"/>
    </Grid>
</Window>
